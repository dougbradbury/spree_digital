<% if @error.present? %>
  <div class="dropbox-error"><p>Sorry, there was a problem talking to Dropbox. </p>
    <p><%= @error.to_s %></p>
  </div>
<% end %>
<ul class = "file-selection">
<% @files.each do |file| %>
  <li data-content-type="<%= file[:content_type] %>"
    data-file-size="<%= file[:file_size] %>"
    data-file-name="<%= file[:name] %>" >
    <%= file[:name] %>
  </li>
<% end %>
</ul>
